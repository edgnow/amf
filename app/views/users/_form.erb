<%= form.label :email %><br />
<%= form.text_field :email %><br />
<%= form.label :password, form.object.new_record? ? nil : "Change password" %><br />
<%= form.password_field :password %><br />
<%= form.label :password_confirmation %><br />
<%= form.password_field :password_confirmation %><br />

<%= hidden_field_tag 'plan_id', @user.plan.id %><br />

<% if @user.plan.id > 1 %>
	<% @user.build_credit_card unless @user.credit_card %>
  	<% form.fields_for :credit_card do |credit_fields| %>
		<%= credit_fields.label :cc_type, 'Card Type' %><br />
		<%= select ('credit_card', 'cc_type_id', CcType.find(:all).collect {|p| [ p.name, p.id ] }) %><br />

		<%= credit_fields.label :number, 'Card Number' %><br />
		<%= credit_fields.text_field :number %><br />

		<%= credit_fields.label :month %>
		<%= credit_fields.select (:month, ['01','02','03','04','05','06','07','08','09','10','11','12']) %>

		<%= credit_fields.label :year %>
		<%= credit_fields.select (:year, ['2009','2010','2011','2012','2013','2014','2015','2016','2017','2018',
		'2019','2020','2021','2022','2023','2024','2025','2026','2027','2028','2029','2030','2031','2032']) %><br />
				
		<% unless credit_fields.object.new_record? %>
	        <%= credit_fields.label :_delete, 'Remove:' %><br />
	        <%= credit_fields.check_box :_delete %><br />
        <% end %>
		<br />
	<% end %>
<% end %>